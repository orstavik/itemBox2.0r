{
  "rules": {
    "users": {
      "$uid": {
        "sketches": {
          "$sketchid": {
            ".read": "$uid == auth.uid || ((data.child('info/permissions').val() == 'read' || data.child('info/permissions').val() == 'edit') && auth != null)",
            ".write": "$uid == auth.uid || (data.child('info/permissions').val() == 'edit' && auth != null)"
          }
        }
      }
    }
  }
}